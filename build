#!/usr/bin/env bash
build_dir=build.dir
re="(MINGW|CYGWIN)"
if [[ $(uname) =~ $re ]]; then
	bash build_portaudio_mingw
fi
if [ -f ../incbuild ]; then
    bash ../incbuild
fi
mkdir -p ${build_dir}
cd ${build_dir}
if [[ $(uname) =~ $re ]]; then
    rm -r *
fi
cmake ..
make
if [[ $(uname) =~ $re ]]; then
    make install/strip
else
    sudo make install
fi
cd ..
